{
	"name": "nextjs-boilerplate-clean-architecture",
	"version": "0.1.0",
	"private": false,
	"author": "zaidanammar",
	"license": "MIT",
	"scripts": {
		"dev": "next dev -p 8888",
		"build": "rm -rf .next && next build",
		"start": "next start -p 8080",
		"lint": "next lint",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:ci": "jest --ci",
		"watch:test": "jest --watch",
		"check:lint": "eslint . --quiet --ignore-path .gitignore",
		"check:prettier": "prettier --config .prettierrc ./src/ --check",
		"check:ts": "tsc",
		"check:dead-ts": "ts-prune --error",
		"checker": "yarn check:lint && yarn check:prettier && yarn check:ts && yarn check:dead-ts && yarn test",
		"format:lint": "eslint . --fix --quiet --ignore-path .gitignore",
		"format:prettier": "prettier --config .prettierrc . --ignore-path .gitignore --write --loglevel silent",
		"formatter": "yarn format:lint && yarn format:prettier",
		"prepare": "husky install",
		"run-docker:locally": "docker-compose up"
	},
	"dependencies": {
		"@hookform/resolvers": "^2.9.10",
		"@reduxjs/toolkit": "^1.9.2",
		"@tanstack/react-query": "^4.23.0",
		"@tanstack/react-query-devtools": "^4.23.0",
		"@types/node": "18.11.18",
		"@types/react": "18.0.27",
		"@types/react-dom": "18.0.10",
		"antd": "^5.2.1",
		"axios": "^1.3.4",
		"class-variance-authority": "^0.4.0",
		"date-fns": "^2.29.3",
		"framer-motion": "^8.5.0",
		"moment": "^2.29.4",
		"next": "^13.3.0",
		"next-redux-wrapper": "^8.1.0",
		"notistack": "^3.0.1",
		"react": "18.2.0",
		"react-debounce-input": "^3.3.0",
		"react-dom": "18.2.0",
		"react-hook-form": "^7.43.0",
		"react-icons": "^4.7.1",
		"react-intersection-observer": "^9.4.1",
		"react-number-format": "^5.1.4",
		"react-pro-sidebar": "^1.0.0-beta.2",
		"react-redux": "^8.0.5",
		"redux-logger": "^3.0.6",
		"redux-persist": "^6.0.0",
		"uninstall": "^0.0.0",
		"zod": "^3.20.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@tailwindcss/line-clamp": "^0.4.4",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^14.0.0",
		"@testing-library/react-hooks": "^8.0.1",
		"@types/jest": "^29.4.4",
		"@types/lodash.isequal": "^4.5.6",
		"@types/redux-logger": "^3.0.9",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.32.0",
		"eslint-config-next": "^13.1.6",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-import-helpers": "^1.3.1",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-tailwindcss": "^3.8.2",
		"husky": "^8.0.0",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"postcss": "^8.4.21",
		"prettier": "2.8.3",
		"tailwindcss": "^3.2.4",
		"ts-jest": "^29.0.5",
		"ts-prune": "^0.10.3",
		"typescript": "^4.9.4"
	},
	"lint-staged": {
		"*.{js, jsx, ts, tsx}": [
			"eslint --cache --fix"
		],
		"*.{css,scss,md,html}": [
			"prettier --write"
		]
	}
}
